<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="independent.dev.presentation.home">

    <application
        android:name="independent.dev.AppGuiaDeEscalada"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuiaDeEscalada">
        <activity
            android:name="independent.dev.presentation.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GuiaDeEscalada.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="independent.dev.presentation.unit_converter.UnitConverterActivity"
            android:exported="true"
            android:label="@string/unit_converter_activity_name"
            android:theme="@style/Theme.GuiaDeEscalada.NoActionBar">
            <intent-filter>
                <action android:name="independent.dev.presentation.unit_converter" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>